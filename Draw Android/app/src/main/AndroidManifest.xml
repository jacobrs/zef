<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.qc.johnabbott.cs603" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyTheme" >
        <activity
            android:name="com.steszyngagne.draw.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.DRAW" />

                <category android:name="android.intent.category.PARENT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steszyngagne.draw.Login"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.steszyngagne.draw.PictureList"
            android:label="@string/title_activity_picture_list"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyTheme" >
            <intent-filter>
                <action android:name="android.intent.action.LIST" />

                <category android:name="android.intent.category.PARENT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
