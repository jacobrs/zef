<html lang="en" ng-app="ZefApp">
  <head>
    <link rel="stylesheet" href="/css/vendor/angular-material.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=RobotoDraft:300,400,500,700,400italic">
    <meta name="viewport" content="initial-scale=1" />
    {{{block "head"}}}
  </head>

  <body layout="column" ng-controller="AppCtrl">
    <md-toolbar layout="row">
      <button ng-click="toggleSidenav('left')" hide-gt-sm class="menuBtn">
        <span class="visually-hidden">
        Menu
        </span>
      </button>
      <h1 class="md-toolbar-tools" layout-align-gt-sm="center">Zef Style, Yo</h1>
    </md-toolbar>
    <div layout="row" flex>
        <md-sidenav layout="column" class="md-sidenav-left md-whiteframe-z2" md-component-id="left" md-is-locked-open="$mdMedia('gt-sm')">
          {{{block "sidebar"}}}
        </md-sidenav>
        <div layout="column" flex id="content">
            <md-content layout="column" flex class="md-padding">
              {{{body}}}
            </md-content>
        </div>
    </div>
    <!-- Angular Material Dependencies -->

    {{{block "scripts"}}}

    <script src="/js/vendor/angular.min.js"></script>
    <script src="/js/vendor/angular-animate.min.js"></script>
    <script src="/js/vendor/angular-aria.min.js"></script>

    <script src="/js/vendor/angular-material.min.js"></script>

    <script src="/js/controllers.js"></script>
  </body>
</html>